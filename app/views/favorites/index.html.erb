<h2>お気に入り一覧</h2>
<table>
  <tr>
    <th>タイトル</th>
    <th>内容</th>
    <th>投稿者</th>
  </tr>

<% @favorites.each do |favorite| %>
  <tr>
    <td><%= favorite.blog.title %></td>
    <td><%= favorite.blog.content %></td>
    <td><%= favorite.blog.user.name%></td>
    <td><%= link_to 'お気に入りを確認する', blog_path(favorite.blog.id) %></td>
  </tr>
<% end %>
</table>

<%= link_to '投稿一覧', blogs_path %>